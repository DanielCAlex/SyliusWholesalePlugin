<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="SkyBoundTech\SyliusWholesalePlugin\Entity\RulesetTranslation"
                       table="skyboundtech_wholesale_ruleset_translation">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <field name="name" type="string" length="100" nullable="true" unique="true"/>
        <field name="description" type="string" length="600" nullable="true"/>

    </mapped-superclass>
</doctrine-mapping>
