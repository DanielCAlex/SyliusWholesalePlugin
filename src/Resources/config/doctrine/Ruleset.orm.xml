<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="SkyBoundTech\SyliusWholesalePlugin\Entity\Ruleset" table="skyboundtech_wholesale_ruleset">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO"/>
        </id>
        <field name="enabled" type="boolean" nullable="false"/>

        <many-to-many field="channels" inversed-by="rulesets"
                      target-entity="SkyBoundTech\SyliusWholesalePlugin\Entity\ChannelInterface">
            <join-table name="skyboundtech_wholesale_ruleset_channels">
                <join-columns>
                    <join-column name="ruleset_id" referenced-column-name="id" on-delete="CASCADE"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="channel_id" referenced-column-name="id" on-delete="CASCADE"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    </mapped-superclass>
</doctrine-mapping>
