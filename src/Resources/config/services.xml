<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="false">
        </defaults>
        <!-- Admin Menu Listener -->
        <service id="app.listener.admin.menu_builder" class="SkyBoundTech\SyliusWholesalePlugin\Menu\AdminMenuListener">
            <tag name="kernel.event_listener" event="sylius.menu.admin.main" method="addAdminMenuItems"/>
            <argument type="service" id="Symfony\Component\Routing\Generator\UrlGeneratorInterface">
                Symfony\Component\Routing\Generator\UrlGeneratorInterface
            </argument>
        </service>
        <service id="skyboundtech.sylius_wholesale_plugin.form.ruleset_type"
                 class="SkyBoundTech\SyliusWholesalePlugin\Form\RulesetType">
            <tag name="form.type"/>
            <argument type="string">
                SkyBoundTech\SyliusWholesalePlugin\Entity
            </argument>
        </service>
    </services>
</container>
